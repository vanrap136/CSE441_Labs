<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="12dp"
        android:background="#EFEFEF" android:layout_marginBottom="10dp"
        tools:ignore="MissingConstraints,RedundantNamespace">

        <TextView android:id="@+id/txtName" android:textStyle="bold"
            android:textSize="16sp" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txtCode" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txtHometown" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content">

            <Button android:id="@+id/btnEdit" android:text="Sửa"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button android:id="@+id/btnDelete" android:text="Xóa"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>